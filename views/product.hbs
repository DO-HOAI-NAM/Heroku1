                <li class="nav-item">
                    <a class="nav-link" href="/insert">Insert product</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/view">View all products</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>

    </nav>

    <div class="m-5">
        <h3 class="text-center">NEW PRODUCT</h3>
        <form action="/product" method="post">
            <div class="from-froup">
                <label for="name" class="form-label">NAME</label>
                <input type="text" class="form-control" name="txtName" id="txtName" value="{{oldValues.name}}">
                <span style="color:red">{{error}}</span>
            </div>
            <div class="from-froup">
                <label for="description" class="form-label">PRICE</label>
                <input type="text" class="form-control" name="txtPrice" id="txtPrice" value="{{oldValues.price}}">
                <span style="color:red">{{errorP}}</span>
            </div>
            <div class="from-froup">
                <label for="videoId" class="form-label">PICTURE URL</label>
                <input type="text" class="form-control" name="txtPicURL" id="txtPicURL" size="150"
                    value="{{oldValues.picURL}}"><span style="color:red">{{errorU}}</span>
            </div>
            <button value="Insert" type="submit" class="btn btn-primary mt-4">ADD PRODUCT</button>
        </form>

    </div>
